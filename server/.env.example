# ==========================================
# Tum Panich API - Environment Configuration
# ==========================================

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/tumpanich_db

# JWT Secret (REQUIRED - generate a strong random string!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Server
PORT=5001
NODE_ENV=development

# CORS - Comma-separated list of allowed origins
# Production example: CORS_ORIGINS=https://liff.line.me,https://your-domain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Development Auth (⚠️ NEVER set to true in production!)
# When true, allows X-LINE-USERID header without token verification
ENABLE_DEV_AUTH=true
